@model QLGV_DTSoft.ViewModel.LoginViewModel
@{
    Layout = "_AuthLayout";
}
<!-- loader Start -->
<div id="loading">
    <div id="loading-center">
    </div>
</div>
<!-- loader END -->

<div class="wrapper">
    <section class="login-content">
        <div class="container">
            <div class="row align-items-center justify-content-center height-self-center">
                <div class="col-lg-8">
                    <div class="card auth-card">
                        <div class="card-body p-0">
                            <div class="d-flex align-items-center auth-content">
                                <div class="col-lg-6 bg-primary content-left">
                                    <div class="p-3">
                                        <h2 class="mb-2 text-white">Đăng nhập</h2>
                                        @Html.HiddenFor(x => x.ReturnUrl)
                                        <form method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        <input class="floating-input form-control"  asp-for="Tennguoidung" placeholder="Nhập tên người dùng">
                                                        <span asp-validation-for="Tennguoidung" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        <input class="floating-input form-control" asp-for="Matkhau" type="password" placeholder="Nhập mật khẩu">
                                                        <span asp-validation-for="Tennguoidung" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="custom-control custom-checkbox mb-3">
                                                        <input type="checkbox" class="custom-control-input" id="customCheck1">
                                                        <label class="custom-control-label control-label-1 text-white" for="customCheck1">Ghi nhớ</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <a href="#" class="text-white float-right">Quên mật khẩu?</a>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-white">Đăng nhập</button>
                                           @* <p class="mt-3">
                                                Create an Account <a href="auth-sign-up.html" class="text-white text-underline">Sign Up</a>
                                            </p>*@
                                        </form>
                                    </div>
                                </div>
                                <div class="col-lg-6 content-right">
                                    <img src="../assets/images/login/01.png" class="img-fluid image-right" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>