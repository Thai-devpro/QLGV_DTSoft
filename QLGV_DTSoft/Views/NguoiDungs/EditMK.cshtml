@model QLGV_DTSoft.Data.NguoiDung

@{
    ViewData["Title"] = "EditMK";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cập nhật mật khẩu</h1>
<br />
<h4>Người dùng</h4>
<hr />
<h5><span class="text-danger">@ViewBag.tbmk</span></h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMK">
            <input type="hidden" asp-for="IdNd" />

            <div class="form-group">
                
                <input type="hidden" asp-for="Matkhau"  />
                
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu mới</label>
                <input name="Matkhaumoi" class="form-control" />
                <span  class="text-danger">@ViewBag.matkhaumoi</span>
            </div> <div class="form-group">
                <label  class="control-label">Nhập lại mật khẩu mới</label>
                <input name="Matkhaulap" class="form-control" />
                <span  class="text-danger">@ViewBag.matkhaulap</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



