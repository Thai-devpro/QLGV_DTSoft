@model QLGV_DTSoft.Data.NguoiDung

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h5><span class="text-danger">@ViewBag.tbmk</span></h5>
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">@ViewData["Title"]: @Model.Hoten</h4>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="EditMK">
            <input type="hidden" asp-for="IdNd" />

            <div class="form-group">
                <input type="hidden" asp-for="Matkhau" />
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu mới</label>
                <input name="Matkhaumoi" class="form-control" type="password" />
                <span class="text-danger">@ViewBag.matkhaumoi</span>
            </div> <div class="form-group">
                <label class="control-label">Nhập lại mật khẩu mới</label>
                <input name="Matkhaulap" class="form-control" type="password" />
                <span class="text-danger">@ViewBag.matkhaulap</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>



