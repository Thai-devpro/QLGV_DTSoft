@model QLGV_DTSoft.Data.VaiTro

@{
    ViewData["Title"] = "Thêm mới vai trò";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tenvaitro" class="control-label">Tên vai trò</label>
                <input asp-for="Tenvaitro" class="form-control" />
                <span asp-validation-for="Tenvaitro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mota" class="control-label">Mô tả</label>
                <input asp-for="Mota" class="form-control" />
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-success" />
            </div>

            <div>
                <a asp-action="Index">Về danh sách</a>
            </div>
        </form>
    </div>
</div>


