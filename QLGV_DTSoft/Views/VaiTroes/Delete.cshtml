@model QLGV_DTSoft.Data.VaiTro

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc muốn xóa?</h3>
<div>
    <h4>Vai trò</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên vai trò
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tenvaitro)
        </dd>
        <dt class = "col-sm-2">
          Mô tả
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mota)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdVt" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Về danh sách</a>
    </form>
</div>
