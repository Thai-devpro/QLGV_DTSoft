@model IEnumerable<QLGV_DTSoft.Data.Quyen>

@{
    ViewData["Title"] = "Cập nhật quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Phân quyền truy cập cho @Context.Session.GetString("tenvt")</h2>
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">@ViewData["Title"]</h4>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="ThemQuyen">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @foreach (var quyen in Model)
                {
                    <div>
                        <input type="checkbox" name="quyen" value="@quyen.IdQuyen"
                        @(quyen.CoQuyenTruyCaps.Any(q => q.IdVt == @Context.Session.GetInt32("mavt")) ? "checked" : "")>
                        <label>@quyen.Tenquyen</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-success" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Về danh sách</a>
        </div>
    </div>
</div>