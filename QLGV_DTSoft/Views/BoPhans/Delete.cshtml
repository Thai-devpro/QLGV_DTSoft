@model QLGV_DTSoft.Data.BoPhan

@{
    ViewData["Title"] = "Xóa bộ phận";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Bạn có chắc chắn muốn xóa bộ phận @Model.Tenbophan ?</h3>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Tên bộ phận
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tenbophan)
            </dd>
            <dt class="col-sm-2">
                Công việc chuyên môn
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Congviecchuyenmon)
            </dd>
            <dt class="col-sm-2">
                Thuộc khu vực
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdKhuvucNavigation.Tenkhuvuc)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdBp" />
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            <a asp-action="Index">Trở về danh sách</a>
        </form>
    </div>
</div>
