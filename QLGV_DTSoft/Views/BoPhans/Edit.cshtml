@model QLGV_DTSoft.Data.BoPhan

@{
    ViewData["Title"] = "Chỉnh sửa bộ phận";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="header-title">
            <h4 class="card-title">@ViewData["Title"] @Model.Tenbophan</h4>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBp" />
            <div class="form-group">
                <label asp-for="IdKhuvuc" class="control-label">Thuộc khu vực</label>
                <select asp-for="IdKhuvuc" class="form-control" asp-items="ViewBag.IdKhuvuc"></select>
                <span asp-validation-for="IdKhuvuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenbophan" class="control-label">Tên bộ phận</label>
                <input asp-for="Tenbophan" class="form-control" />
                <span asp-validation-for="Tenbophan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Congviecchuyenmon" class="control-label">Công việc chuyên môn</label>
                <input asp-for="Congviecchuyenmon" class="form-control" />
                <span asp-validation-for="Congviecchuyenmon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
            <div>
                <a asp-action="Index">Trở về danh sách</a>
            </div>
        </form>
    </div>
</div>



